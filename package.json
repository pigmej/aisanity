{
  "name": "aisanity",
  "version": "0.1.0",
  "description": "Devcontainer wrapper for sandboxed development environments",
  "main": "src/index.ts",
  "bin": {
    "aisanity": "src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "package": "bun build ./src/index.ts --compile --outfile ./dist/aisanity",
    "aisanity": "bun src/index.ts",
    "prepare": "bun run build"
  },
  "keywords": [
    "devcontainer",
    "sandbox",
    "development",
    "container",
    "workspace"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/yaml": "^1.9.7",
    "typescript": "^5.0.0",
    "bun-types": "latest",
    "@types/bun": "latest"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "yaml": "^2.3.0",
    "chalk": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
